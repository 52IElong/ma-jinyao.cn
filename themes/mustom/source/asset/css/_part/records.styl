@keyframes records-appear
  from
    opacity 0
  to
    opacity 1

[p-record]
  background var(--color-background)
  animation records-appear 0.6s ease
  @media (min-width: $app_mobile_width)
    margin $gap * 3 0
    border-radius $gap
    border 1px solid var(--color-clear)
    
[p-record-caption]
  padding 0 $gap
  font-size 0.8em
  line-height 2.5
  background var(--color-clear)
  i
    margin-right $gap * 0.5